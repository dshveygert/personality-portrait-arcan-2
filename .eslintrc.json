{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended"
  ],
  "plugins": [
    "@typescript-eslint",
    "import",
    "react",
    "jsx-a11y",
    "react-hooks",
    "unused-imports",
    "prettier"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "fragment": "Fragment",
      "version": "detect"
    }
  },
  "ignorePatterns": "build",
  "rules": {
    "array-bracket-spacing": 2,
    "arrow-parens": [
      2,
      "always"
    ],
    "camelcase": [
      0,
      {
        "properties": "always"
      }
    ],
    "jsx-quotes": [
      1,
      "prefer-double"
    ],
    "linebreak-style": [
      0,
      "unix"
    ],
    "max-len": [
      1,
      320,
      2
    ],
    "no-await-in-loop": 2,
    "no-console": [
      1,
      {
        "allow": [
          "info",
          "warn",
          "error"
        ]
      }
    ],
    "no-var": 2,
    "object-shorthand": 2,
    "prefer-const": 2,
    "prefer-template": 2,
    "quote-props": [
      2,
      "as-needed"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "space-before-function-paren": [
      2,
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "strict": [
      2,
      "global"
    ],
    "global-require": 2,
    "function-paren-newline": 0,
    "semi": [
      "error",
      "always"
    ],
    "unused-imports/no-unused-imports": "warn",
    "import/order": [
      "error",
      {
        "groups": [
          "external",
          "internal",
          "builtin",
          "parent",
          "index",
          "sibling"
        ],
        "pathGroups": [
          {
            "pattern": "@api/**",
            "group": "internal"
          },
          {
            "pattern": "@assets/**",
            "group": "internal"
          },
          {
            "pattern": "@components/**",
            "group": "internal"
          },
          {
            "pattern": "@config/**",
            "group": "internal"
          },
          {
            "pattern": "@consts/**",
            "group": "internal"
          },
          {
            "pattern": "@context/**",
            "group": "internal"
          },
          {
            "pattern": "@hooks/**",
            "group": "internal"
          },
          {
            "pattern": "@models/**",
            "group": "internal"
          },
          {
            "pattern": "@services/**",
            "group": "internal"
          },
          {
            "pattern": "@stores/**",
            "group": "internal"
          },
          {
            "pattern": "@styles/**",
            "group": "internal"
          },
          {
            "pattern": "@types/**",
            "group": "internal"
          },
          {
            "pattern": "@utils/**",
            "group": "internal"
          },
          {
            "pattern": "@views/**",
            "group": "internal"
          }
        ],
        "pathGroupsExcludedImportTypes": [
          "builtin"
        ],
        "newlines-between": "always"
      }
    ],
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "import/prefer-default-export": 0,
    "import/newline-after-import": [
      "warn",
      {
        "count": 1
      }
    ],
    "jsx-a11y/anchor-is-valid": 0,
    "@typescript-eslint/explicit-module-boundary-types": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/ban-ts-comment": 1,
    "react/display-name": "off",
    "react/prop-types": 0
  }
}
